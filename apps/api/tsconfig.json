{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"], // We might need to include the drizzle.config.ts
  "exclude": ["node_modules", "drizzle.config.ts"]
}
